[Unit]
Description=update-hosts automatic hosts file update

[Service]
Type=oneshot
TimeoutSec=300
ExecStartPre=/bin/sh -c 'until ping -c 1 raw.githubusercontent.com; do sleep 10; done'
ExecStart=/bin/sh -c 'update-hosts --systemd'
